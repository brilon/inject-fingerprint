{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2021
    },
    "rules": {
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "no-var": "error",
        "no-unused-vars": "error",
        "prefer-const": "error",
        "semi": [
            "error",
            "always"
        ]
    },
    "globals": {
        "__LOGGER_FINGERPRINT": true
    }
}